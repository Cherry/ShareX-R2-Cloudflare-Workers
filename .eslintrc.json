{
	"root": true,
	"extends": [
		"@nodecraft",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"json"
	],
	"rules": {
		"no-var": "error",
		"prefer-const": "error",
		"node/no-unsupported-features/es-syntax": "off",
		"node/no-missing-import": "off"
	},
	"parserOptions": {
		"allowImportExportEverywhere": true,
		"ecmaVersion": 2020,
		"ecmaFeatures": {
			"impliedStrict": true
		},
		"sourceType": "module"
	}
}